{
  "apps": {
    "name": "fatecms",
    "script": "./server/app.js",
    "min_uptime": "60s",
    "max_restarts": 30,
    "exec_mode": "fork_mode",
    "error_file": "./pm2log/err.log",
    "out_file": "./pm2log/out.log",
    "pid_file": "./pm2log/test.pid",
    "watch": false,
    "ignore_watch": [
      "node_modules",
      "pm2log",
      "static/upload",
      "src",
      "build",
      "public"
    ]
  }
}