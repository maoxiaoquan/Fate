                            <a class="avatar" href="/user/<%= data.article.uid %>/article/all">
                                <img src="<%= data.user.avatar %>" alt="96">
                            </a>
                            <% if(data.uid !== data.article.uid){ %>
                            <a class="btn btn-success follow attention-article"
                               :class="{'active':curr_user_info.attention_uid_arr.indexOf(<%= data.article.uid %>)!==-1}"
                               @click="post_user_attention"
                               href="javascript:;"
                               data-uid="<%= data.article.uid %>">
                                <i class="iconfont icon-tianjia"></i><span>关注</span>
                            </a>
                            <% } %>
