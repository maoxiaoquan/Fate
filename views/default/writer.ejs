<script>
  window.onload = function () {

    !function (window) {

      /* get page height */
      var sHeight = document.documentElement.scrollHeight
      /* get page width */
      var sWidth = document.documentElement.scrollWidth
      /* 可视区域宽高 */
      var cHeight = document.documentElement.clientHeight

      /* mask create element */
      var fata_mask = document.createElement('div')
      /* box_modal create element */
      var fata_modal = document.createElement('div')

      function open_modal () {
        fata_mask.id = 'mask';
        fata_mask.style.height = sHeight + 'px'
        fata_mask.style.width = sWidth + 'px'
        document.body.appendChild(fata_mask)

        fata_modal.id = 'box-modal';
        fata_modal.classList.add("box-layer")
        fata_modal.innerHTML = document.getElementById('writer-submit').innerHTML
        document.body.appendChild(fata_modal)

        /* get box modal width height */
        var dHeight = fata_modal.offsetHeight
        var dWidth = fata_modal.offsetWidth
        fata_modal.style.top = (cHeight - dHeight) / 2 + 'px'
        fata_modal.style.left = (sWidth - dWidth) / 2 + 'px'
      }

      function close_model () {
        document.body.removeChild(fata_mask)
        document.body.removeChild(fata_modal)
      }

      var openBtn = document.getElementById('issue-article-model')
      openBtn.addEventListener('click', open_modal)

      document.addEventListener('click', function (event) {
        var target = event.target;
        if (target.id == "save-draft") {
          close_model()
        }
      })

      document.getElementById('mark-text').innerHTML =
        marked('# Marked in the browser\n\nRendered by **marked**.')

    }(window)

  }

</script>
